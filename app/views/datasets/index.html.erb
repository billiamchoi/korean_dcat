<p id="notice"><%= notice %></p>

<h1>Datasets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @datasets) do |dataset| %>
        <td><%=link_to dataset.title, dataset_path(dataset) %></td>
        <td><%= dataset.name_creator %></td>
        <td>
          <%= link_to 'Edit', edit_dataset_path(dataset) %> |
          <%= link_to 'Destroy', dataset, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dataset', new_dataset_path %>
